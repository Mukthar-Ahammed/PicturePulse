<section>
    <div class="container mt-5">
        <form action="/admin/add-movie" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter movie name" style="width: 50rem;">
            </div>
            <div class="form-group">
                <label for="genere">Genere</label>
                <input type="text" class="form-control" id="genere" name="genere" placeholder="Enter the genere" style="width: 50rem;">
            </div>
            <div class="form-group">
                <label for="poster" class="form-label">Poster</label>
                <input class="form-control form-control-sm" id="poster" name="poster" type="file" style="width: 72%;">
            </div>
            <button type="submit" class="btn btn-success mt-4" style="background-color: black; border:0px;">Submit</button>
        </form>
    </div>
</section>