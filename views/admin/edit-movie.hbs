<section class="container-main">
  <div class="container mt-5">
    <form action="/admin/edit-movie/{{movie._id}}" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" value="{{movie.name}}" id="name" name="name" placeholder="Enter movie name">
      </div>
      <div class="form-group">
        <label for="genre">Genre</label>
        <input type="text" class="form-control" id="genre" name="genre" placeholder="Enter the genre" value="{{movie.genre}}">
      </div>
      <div class="form-group-third">
        <label for="year">Year</label>
        <input type="text" class="form-control" id="year" name="year" placeholder="Year of release" value="{{movie.year}}">
      </div>
      <div class="form-group-third">
        <label for="rating">Rating</label>
        <input type="text" class="form-control" id="rating" name="rating" placeholder="Rating" value="{{movie.rating}}">
      </div>
      <div class="form-group-third">
        <label for="director">Director</label>
        <input type="text" class="form-control" id="director" name="director" placeholder="Director" value="{{movie.director}}">
      </div>
      <div class="form-group-half">
        <label for="cast">Cast</label>
        <input type="text" class="form-control" id="cast" name="cast" placeholder="Name of the cast" value="{{movie.cast}}">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description" placeholder="Description of the movie" rows="4">{{movie.description}}</textarea>
      </div>
      <div class="form-group">
        <label for="poster" class="form-label">Poster</label>
        <img src="{{movie.poster}}" style="width: 100px; height: auto;" id="View">
        <input class="form-control-file" id="poster" name="poster" type="file" onchange="view(event)">
        <input type="hidden" name="existingPoster" value="{{movie.poster}}">
      </div>
      <div id="audio-trailer">
        <div class="form-group">
          <label for="trailer" class="form-label">Trailer</label>
          <input class="form-control form-control-sm" id="trailer" name="trailer" type="file" accept="video/*" multiple>
          <input type="hidden" name="existingTrailer" value="{{movie.trailer}}">
        </div>
        <div class="form-group">
          <label for="songs" class="form-label">Songs</label>
          <input class="form-control form-control-sm" id="songs" name="songs" type="file" accept="audio/*" multiple>
          <input type="hidden" name="existingSongs" value="{{movie.songs}}">
        </div>
      </div>
      <button type="submit" class="btn-submit mt-4"><i class="fa-solid fa-pen-to-square"></i></button>
    </form>
  </div>
</section>

<script>
  function view(event) {
    document.getElementById('View').src = URL.createObjectURL(event.target.files[0]);
  }
</script>
